<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".views.FormularioActivity"
    tools:showIn="@layout/activity_formulario">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imputIconImagen"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="230dp"
                    app:srcCompat="@drawable/ic_photo" />

                <ImageView
                    android:id="@+id/imputAddImagen"
                    android:layout_width="173dp"
                    android:layout_height="143dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="16dp"
                    app:srcCompat="@drawable/imgexample01" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imputIconMarca"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="55dp"
                    app:srcCompat="@drawable/ic_local_offer" />

                <EditText
                    android:id="@+id/imputAddMarca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:hint="Marca"
                    android:inputType="textPersonName" />

                <ImageView
                    android:id="@+id/imputIconModelo"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="65dp"
                    app:srcCompat="@drawable/ic_directions_car" />

                <EditText
                    android:id="@+id/imputAddModelo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:hint="Modelo"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imputIconAnyo"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="55dp"
                    app:srcCompat="@drawable/ic_date_range" />

                <EditText
                    android:id="@+id/imputAddAnyo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:maxLength="4"
                    android:ems="10"
                    android:hint="A침o"
                    android:inputType="numberSigned" />

                <ImageView
                    android:id="@+id/imputIconTraccion"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="65dp"
                    app:srcCompat="@drawable/ic_settings_input_component" />

                <EditText
                    android:id="@+id/imputAddTraccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:hint="Tracci칩n"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imputIconCombustible"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="55dp"
                    app:srcCompat="@drawable/ic_local_gas_station" />

                <Spinner
                    android:id="@+id/imputAddCombustible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="19dp"/>

                <Button
                    android:id="@+id/imputAddCombustibleBtn"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="12dp"
                    android:drawableLeft="@drawable/ic_add"/>

                <ImageView
                    android:id="@+id/imputIconFechaMatriculacion"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="40dp"
                    app:srcCompat="@drawable/ic_today" />

                <TextView
                    android:id="@+id/imputAddFechaMatriculacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="18dp"
                    android:text="Fecha de matriculaci칩n"
                    android:textSize="17dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imputIconEdicionEspecial"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="55dp"
                    app:srcCompat="@drawable/ic_local_activity" />

                <TextView
                    android:id="@+id/imputAddEdicionEspecialTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="18dp"
                    android:text="Edici칩n Especial"
                    android:textSize="17dp"/>

                <Switch
                    android:id="@+id/imputAddEdicionEspecial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="17dp"/>

                <Button
                    android:id="@+id/imputBtnGuardar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="50dp"
                    android:text="Guardar" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
