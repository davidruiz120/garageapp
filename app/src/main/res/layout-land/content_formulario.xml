<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".views.FormularioActivity"
    tools:showIn="@layout/activity_formulario">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/inputIconAddImagen"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_photo" />

                <ImageView
                    android:id="@+id/inputAddImagen"
                    android:layout_width="173dp"
                    android:layout_height="143dp"
                    android:layout_marginStart="10dp"
                    app:srcCompat="@drawable/imgexample01" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/inputIconAddMarca"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_local_offer" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputAddMarcaTIL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputAddMarca"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:width="215dp"
                        android:hint="@string/marca" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/inputIconAddModelo"
                    android:layout_width="20dp"
                    android:layout_marginStart="50dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_directions_car" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputAddModeloTIL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputAddModelo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:width="215dp"
                        android:hint="@string/modelo" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/inputIconAddAnyo"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_date_range" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputAddAnyoTIL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputAddAnyo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="4"
                        android:width="215dp"
                        android:hint="@string/anyo"
                        android:inputType="numberSigned"/>
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/inputIconAddTraccion"
                    android:layout_width="20dp"
                    android:layout_marginStart="50dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_settings_input_component" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputAddTraccionTIL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputAddTraccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:width="215dp"
                        android:hint="@string/traccion"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/inputIconAddCombustible"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_local_gas_station" />

                <Spinner
                    android:id="@+id/inputAddCombustible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"/>

                <Button
                    android:id="@+id/inputAddCombustibleBtn"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:drawableLeft="@drawable/ic_add"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/inputIconAddFechaMatriculacion"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_today" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputAddFechaMatriculacionTIL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputAddFechaMatriculacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="10"
                        android:width="215dp"
                        android:hint="@string/fecha_matriculacion"
                        android:inputType="number|date"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/inputAddFechaMatriculacionBtn"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:drawableLeft="@drawable/ic_edit"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/inputIconAddEdicionEspecial"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_local_activity" />

                <TextView
                    android:id="@+id/inputAddEdicionEspecialTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/edicion_especial"
                    android:textSize="17dp"/>

                <Switch
                    android:id="@+id/inputAddEdicionEspecial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/inputBtnGuardar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/guardar"
                    android:drawableLeft="@drawable/ic_save"/>

                <Button
                    android:id="@+id/inputBtnBorrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:text="@string/borrar"
                    android:drawableLeft="@drawable/ic_delete"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
